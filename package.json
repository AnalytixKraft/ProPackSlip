{
  "name": "packpro-slip",
  "version": "0.1.1",
  "author": "www.analytixkraft.tech",
  "private": true,
  "main": "desktop/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prisma": "prisma",
    "desktop": "electron .",
    "desktop:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "desktop:prepare": "node desktop/scripts/prepare-desktop.js",
    "desktop:dist": "npm run desktop:prepare && electron-builder --mac --x64 --win --x64",
    "desktop:mac": "npm run desktop:prepare && electron-builder --mac --x64",
    "desktop:win": "npm run desktop:prepare && electron-builder --win --x64",
    "desktop:win:portable": "npm run desktop:prepare && electron-builder --win portable --x64"
  },
  "build": {
    "appId": "com.packproslip.desktop",
    "productName": "PackPro Slip",
    "asar": false,
    "asarUnpack": [
      "node_modules/.prisma/**/*",
      "node_modules/@prisma/engines/**/*"
    ],
    "files": [
      "desktop/**/*",
      ".next/**/*",
      "public/**/*",
      "node_modules/.prisma/**/*",
      "node_modules/@prisma/client/.prisma/**/*",
      "next.config.js",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "artifactName": "PackPro Slip-${version}-mac-${arch}.${ext}"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "next": "13.4.19",
    "playwright": "1.39.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "16.18.60",
    "@types/react": "18.2.28",
    "@types/react-dom": "18.2.13",
    "concurrently": "^8.2.2",
    "electron": "^25.8.4",
    "electron-builder": "^24.13.3",
    "eslint": "8.51.0",
    "eslint-config-next": "13.4.19",
    "prisma": "^5.22.0",
    "typescript": "5.2.2",
    "wait-on": "^7.0.1"
  }
}
